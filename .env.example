# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# SMTP Configuration (nodemailer)
# Option 1: Use SMTP_URL connection string format
SMTP_URL=smtp://username:password@smtp.example.com:587

# Option 2: Use individual SMTP settings (comment out SMTP_URL if using these)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
# SMTP_SECURE=false

# Email Configuration
EMAIL_FROM=noreply@solvyapp.com

# Magic Link Configuration
MAGIC_LINK_BASE_URL=http://localhost:19000
MAGIC_LINK_EXPIRATION=60
MAGIC_LINK_SECRET=your-secret-key-for-hmac-here-change-in-production

# Session/JWT Configuration (for creating sessions after verification)
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRATION=7d
